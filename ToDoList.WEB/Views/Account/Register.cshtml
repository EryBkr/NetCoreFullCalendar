@model UserAddDto
@{
    ViewData["Title"] = "Register";
}

<form asp-action="Register" method="post" class="w-50 mx-auto my-3 p-3 shadow">
    <h4>Kayıt Ol</h4>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <span class="text-danger" asp-validation-for="UserName"></span>
        <input class="form-control" type="text" asp-for="UserName" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <span class="text-danger" asp-validation-for="Password"></span>
        <input class="form-control" type="password" asp-for="Password" />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        <input class="form-control" type="password" asp-for="ConfirmPassword" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <span class="text-danger" asp-validation-for="Email"></span>
        <input class="form-control" type="email" asp-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <span class="text-danger" asp-validation-for="Name"></span>
        <input class="form-control" type="text" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Surname"></label>
        <span class="text-danger" asp-validation-for="Surname"></span>
        <input class="form-control" type="text" asp-for="Surname" />
    </div>
    <div class="form-group">
        <label for="exampleColorInput" class="form-label">Color picker</label>
        <span class="text-danger" asp-validation-for="Color"></span>
        <input type="color" asp-for="Color" class="form-control form-control-color" id="exampleColorInput" value="#563d7c" title="Choose your color">

    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="IsDentist" />
        <label class="form-check-label" asp-for="IsDentist"></label>
        <span class="text-danger" asp-validation-for="IsDentist"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <button type="submit" class="btn btn-success btn-sm">Kayıt Ol</button>
    <a class="btn btn-sm btn-warning" asp-action="LogIn">Vazgeç</a>
</form>

@section Scripts{
    <script src="~/lib/jquery/validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/validation/jquery.validate.unobtrusive.min.js"></script>
}